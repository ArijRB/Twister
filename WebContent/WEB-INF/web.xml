<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app> 
	
	<servlet>
		<servlet-name>LoginUser</servlet-name>
		<servlet-class>servlets.users.Login</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LogoutUser</servlet-name>
		<servlet-class>servlets.users.Logout</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>createUser</servlet-name>
		<servlet-class>servlets.users.CreateUser</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>deleteUser</servlet-name>
		<servlet-class>servlets.users.DeleteUser</servlet-class>
	</servlet>
	
	
	<servlet>
		<servlet-name>deleteMessage</servlet-name>
		<servlet-class>servlets.messages.DeleteMessage</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>getMessage</servlet-name>
		<servlet-class>servlets.messages.GetMessage</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>getMessagePrive</servlet-name>
		<servlet-class>servlets.messages.GetMessagePrive</servlet-class>
	</servlet>
	   
	<servlet>
		<servlet-name>newMessage</servlet-name>
		<servlet-class>servlets.messages.NewMessage</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>MessagePrive</servlet-name>
		<servlet-class>servlets.messages.MessagePrive</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>newFriend</servlet-name>
		<servlet-class>servlets.friends.NewFriend</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>deleteFriend</servlet-name>
		<servlet-class>servlets.friends.DeleteFriend</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>getFriend</servlet-name>
		<servlet-class>servlets.friends.GetFriend</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>addComment</servlet-name>
		<servlet-class>servlets.comments.AddComment</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>deleteComment</servlet-name>
		<servlet-class>servlets.comments.DeleteComment</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginUser</servlet-name>
		<url-pattern>/user/Login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogoutUser</servlet-name>
		<url-pattern>/user/Logout</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>createUser</servlet-name>
		<url-pattern>/user/CreateUser</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>deleteUser</servlet-name>
		<url-pattern>/user/DeleteUser</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>deleteMessage</servlet-name>
		<url-pattern>/message/DeleteMessage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>getMessage</servlet-name>
		<url-pattern>/message/GetMessage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>getMessagePrive</servlet-name>
		<url-pattern>/message/GetMessagePrive</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>newMessage</servlet-name>
		<url-pattern>/message/NewMessage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>MessagePrive</servlet-name>
		<url-pattern>/message/MessagePrive</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>newFriend</servlet-name>
		<url-pattern>/friends/NewFriend</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>deleteFriend</servlet-name>
		<url-pattern>/friends/DeleteFriend</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>getFriend</servlet-name>
		<url-pattern>/friends/GetFriend</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>addComment</servlet-name>
		<url-pattern>/comments/AddComment</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>deleteComment</servlet-name>
		<url-pattern>/comments/DeleteComment</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/db</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
</web-app>
